<% if signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>
<table>
<% @posts.each do |post| %>
	<tr><td><h1><%= post.title %></h1></td></tr>
	<% if signed_in? %>
	<tr>
    	<td>
	<%= link_to 'Edit', edit_post_path(post) %> | 
	<%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>	
	</tr>
	<% end %>
    	<tr><td><%= post.content %></td></tr>
<% end %>
</table>
